<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>

    <jsp:useBean id="num" class="EvenCalc"></jsp:useBean>
    <jsp:setProperty property = "num" name="num"/>
    
    <%
    int x;
    String sign;
    public String EvenCalc(x){
    	if(x % 2 == 0){
    		sign="짝수";
    	}else if(x % 2 == 1){
    		sign="홀수";
    	}else{
    		sign="null";
    	}
    }
    
    %>