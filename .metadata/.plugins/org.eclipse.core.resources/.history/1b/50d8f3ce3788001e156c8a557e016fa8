<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>

    <jsp:useBean id="num" class="evenCalc"></jsp:useBean>
    <jsp:setProperty property = "num" name="num"/>
    
    <%
    String n = request.getparameter("num");
    

    
    
    %>
    
    <%
    
    public void evenCalc(n){
        String sign;
    	if(n % 2 == 0){
    		sign="짝수";
    	}else if(n % 2 == 1){
    		sign="홀수";
    	}else{
    		sign="null";
    	}
        out.println("결과는 " + sign + "입니다.");

    }
    
    %>
    