<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>

    <jsp:useBean id="num" class="EvenCalc"></jsp:useBean>
    <jsp:setProperty property = "num" name="num"/>
    
    <%
    String x = request.getparameter("num");
    String sign;
    public void EvenCalc(x){
    	if(x % 2 == 0){
    		sign="짝수";
    	}else if(x % 2 == 1){
    		sign="홀수";
    	}else{
    		sign="null";
    	}
    	out.println("결과는 " + sign + "입니다.");
    }
    
    %>